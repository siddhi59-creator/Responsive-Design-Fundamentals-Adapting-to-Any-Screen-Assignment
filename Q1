    }

    /*  Default: Large screen → 3 cards per row */
    .card-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
        max-width: 1200px;
        margin: auto;
    }

    .card {
        background: #ffffff;
        padding: 25px;
        border-radius: 16px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        transition: transform 0.2s ease;
    }

    .card:hover {
        transform: translateY(-4px);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 14px;
    }

    .card-title {
        font-size: 20px;
        font-weight: 600;
    }

    .price {
        font-size: 20px;
        font-weight: 700;
        color: #b68d2e;
    }

    .card-text {
        color: #555;
        font-size: 14px;
        line-height: 1.6;
    }

    /*  Small Screen – 1 card per row */
    @media (max-width: 600px) {
        .card-container {
            grid-template-columns: 1fr;
        }
    }

    /* Medium Screen – 2 cards per row */
    @media (min-width: 601px) and (max-width: 992px) {
        .card-container {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>

